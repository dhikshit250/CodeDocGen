# Authentication
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Database (Choose ONE option)
# Option 1: Aiven PostgreSQL
DATABASE_URL=postgresql://username:password@your-aiven-host.aivencloud.com:port/database-name
AVIEN_DB_HOST=your-aiven-host.aivencloud.com
AVIEN_DB_PORT=port
AVIEN_DB_USER=username
AVIEN_DB_PASSWORD=password
AVIEN_DB_NAME=database-name

# Option 2: Local PostgreSQL (uncomment and use this instead)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/code-doc-gen

# OpenRouter API (for AI code generation)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3-haiku
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Cloudinary (for images and file storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_FOLDER=code-doc-gen

# Email (optional for notifications)
RESEND_API_KEY=re_your-resend-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# Application Settings
NODE_ENV=development
PORT=3000
